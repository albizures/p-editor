* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-weight: 300;
  background-color: #f1f1f1;
  position absolute
  height calc(100% - 35px)
  width 100%
  padding 0
  margin-top 35px
}
#container
  position absolute
  width 100%
  height 100%
.navbar
  position fixed
  top 0
  width 100%
  height 35px
  background black
  header
    height 100%
    padding 0
    ul
      list-style none
      margin: 0
      padding: 0
      color #f1f1f1
      li
        display: inline-block
        color #f1f1f1
        padding 0 1em
        a
          color #f1f1f1
          font-size 0.77em
          line-height 3
          text-decoration none
