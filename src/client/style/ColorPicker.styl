.panel-colorpicker
  .color
    vertical-align: top
    margin 3px
    margin-top: 6px
  .input
    margin-top 5px
    margin-right 5px
    float left
    label
      margin-left 2px
      margin-right 2px
      &::after
        content  ':'

.color-picker
  .picker
    position absolute
    pointer-events none
  .hsla
    margin 5px
    float left
    .h, .sl, .alpha
      border 1px solid rgb(135, 135, 135)
      box-sizing border-box
      float left
      border-radius 2px
      position relative
      box-shadow: rgba(0, 0, 0, 0.14902) 0px 0px 0px 1px inset, rgba(0, 0, 0, 0.247059) 0px 0px
    .alpha
      .picker
        height calc(100% - 2px)
        width 6px
        border-radius 1px
        box-shadow rgba(0, 0, 0, 0.6) 0px 0px 2px
        margin-top 1px
        transform translateX(-3px)
        background rgb(255, 255, 255)
      .background, .a
        top 0
        left 0
        width 100%
        height 100%
        position absolute
      .background
        background-size 7%
    .h
      background: linear-gradient(to top, #f00 0%, #ff0 17%, #0f0 33%, #0ff 50%, #00f 67%, #f0f 83%, #f00 100%)
      .picker
        height 6px
        width calc(100% - 2px)
        border-radius 1px
        box-shadow rgba(0, 0, 0, 0.6) 0px 0px 2px
        margin-left 1px
        transform translateY(-3px)
        background rgb(255, 255, 255)
    .sl
      position relative
      margin 0 5px 5px 0
      .picker
        height 10px
        width 10px
        border-radius 50%
        box-shadow: rgb(255, 255, 255) 0px 0px 0px 1px inset;
        transform: translate(-5px, -5px);
      .s, .l
        top 0
        left 0
        width 100%
        height 100%
        position absolute
      .s
        background-image -webkit-linear-gradient(top, transparent 0%, #000000 100%)
        background-image linear-gradient(to bottom, transparent 0%, #000000 100%)
      .l
        background-image -webkit-linear-gradient(left, #ffffff 0%, transparent 100%)
        background-image linear-gradient(to right, #ffffff 0%, transparent 100%)

