.btn 
  btn-bg()
  border 1px solid main-black
.input
  padding-left 5px
  background input-background
  border 1px solid main-black
  border-radius 2px
  width 100%
  box-sizing border-box
  box-shadow inset 0 0 1px rgba(0, 0, 0, 1)
  &:focus
    background whitesmoke
  color black
.form
  margin 5px
  .form-group
    margin-bottom 5px
    label
      display block
  button
    display block
    margin 0 auto


.input-group
  display table
  &> span, &>.span
    padding 0 5px
    btn-bg()
    border 1px solid main-black
  &> .input, &> span, &> .span
    display table-cell
  .input:not(:first-child):not(:last-child)
    border-radius 0
  .input:first-child, span:first-child
    border-top-right-radius 0
    border-bottom-right-radius 0
    border-right 0
  .input:last-child, span:last-child
    border-top-left-radius 0
    border-bottom-left-radius 0
    