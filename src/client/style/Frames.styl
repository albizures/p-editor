size-btn-preview = 20px
size-font-preview = 0.65em

.panel.panel-frames
  //background: whitesmoke
  z-index 2
  top 0
  left 0
  height 80%
  width 120px
  button.add-frame
    width 94%
    margin 3%
  .list-content
    height calc(100% - 95px)
    overflow-y scroll
  ul
    li
      transition 0.3s top, 0.1s transform //cubic-bezier(0.46, 0.03, 0.52, 0.96)
      border 1px solid
      width 100%
      z-depth-1() 0
      &.drag
        z-index 1
        z-depth-2() 0
        transition 0.1s transform, 0s top
        transform: scale(1.07);
        background: rgba(0, 0, 0, 0.6);
        *
          opacity: 0.4

.preview-frames
  cursor move
  position relative
  span
    position absolute
    bottom 0
    left 0
  .btn,.index
    position absolute
    width size-btn-preview
    height size-btn-preview
  .index
    bottom 0
    right 0
  .btn
    opacity 0
    transition opacity 0.3s
    font-size size-font-preview
    top 0
    left 0
  .btn-clone
    left size-btn-preview
  .btn-hidden
    left size-btn-preview * 2
  &:hover
    .btn
      opacity 1
  &.active
    outline 2px rgba(223,116,12, 1) solid
