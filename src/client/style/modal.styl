.modal-login
  text-align center
  a
    margin-top 10px
    padding 10px
  .modal-header
    background-image: -webkit-linear-gradient(rgb(66, 66, 66) 0%, rgb(48, 48, 48) 100%)
    background-image: -o-linear-gradient(rgb(66, 66, 66) 0%, rgb(48, 48, 48) 100%)
    background-image: linear-gradient(rgb(66, 66, 66) 0%, rgb(48, 48, 48) 100%)
    height 30px
    font bold 17px sans-serif
    .title 
      line-height 30px
      margin-right: -30px;
    .close
      background transparent
      float right
      height 30px
      border 0
      opacity 0.7
      padding 0 8px
  .modal-body
    padding 10px 10px 30px 10px

.modal
  z-index 41
  position fixed
  width 100%
  height 100%
  &.clicked
    .panel
      transform scale(1.03)
  .backdrop
    z-index -1
    position absolute
    width 100%
    height 100%
    opacity .4
    filter: blur(5px);
    -webkit-filter: blur(5px);
    background black
  .panel,.modal-content
    transition 0.2s transform
    background main-gray
    border-radius 3px
    color text-color
    position initial
    margin 0 auto
    margin-top 100px
    padding 0
    box-shadow rgba(0, 0, 0, 0.247059) 0px 0px 0px 1px, rgba(0, 0, 0, 0.14902) 0px 8px 16px