.modal-login
  text-align center
  a
    margin-top 10px
    padding 10px
  .modal-header
    background-image: -webkit-linear-gradient(rgb(66, 66, 66) 0%, rgb(48, 48, 48) 100%)
    background-image: -o-linear-gradient(rgb(66, 66, 66) 0%, rgb(48, 48, 48) 100%)
    background-image: linear-gradient(rgb(66, 66, 66) 0%, rgb(48, 48, 48) 100%)
    height 30px
    font bold 17px sans-serif
    .title 
      line-height 30px
      margin-right: -30px;
    .close
      background transparent
      float right
      height 30px
      border 0
      opacity 0.7
      padding 0 8px
  .modal-body
    padding 10px 10px 30px 10px
