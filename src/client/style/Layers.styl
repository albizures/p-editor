

.layers
  width: 100%
  height: 100%
  //background: whitesmoke
  button.add-layer
    width 94%
    margin 3%
  .list-content
    height calc(100% - 37px)
    overflow-y scroll



.preview-layer
  transition 0.3s top, 0.1s transform //cubic-bezier(0.46, 0.03, 0.52, 0.96)
  outline 3px solid black
  margin-bottom 10px 
  z-depth-1() 0
  cursor move
  position relative
  &.drag
    z-index 1
    z-depth-2() 0
    transition 0.1s transform, 0s top
    transform: scale(1.07);
    background: rgba(0, 0, 0, 0.6);
    *
      opacity: 0.4
  span
    position absolute
    bottom 0
    left 0
    background black
    border-radius: 0px 10px 0px 0px;
    padding: 5px 5px 2px 2px;
    width: 22px;
    height: 28px;
    text-align: center;
  .btn,.index
    position absolute
    width size-btn-preview
    height size-btn-preview
  .index
    bottom 0
    right 0
  .btn
    opacity 0
    transition opacity 0.3s
    font-size size-font-preview
    top 0
    left 0
  .btn-clone
    left size-btn-preview
  .btn-hidden
    left size-btn-preview * 2
  &:hover
    .btn
      opacity 1
  &.active
    outline: 3px rgba(223,116,12, 1) solid
    span
      background: rgba(223,116,12, 1);
