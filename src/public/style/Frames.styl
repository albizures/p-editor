size-btn-preview = 20px
size-font-preview = 0.65em

.panel-frames
	z-index 2
	top 0
	left 0
	height 100%
	width 120px
	background rgba(0,0,0,.5)
	button.add-frame
		width 94%
		margin 3%
	ul
		overflow-y scroll
		height 90%
		list-style none
		padding 7px
		margin 0
		li
			border 1px solid
			width 100%
			//height 100px
			margin-bottom 10px
			.frame-preview
				&.active
					outline 5px solid yellow

.preview-frame
	cursor move
	position relative
	.btn,.index
		position absolute
		width size-btn-preview
		height size-btn-preview
	.index
		bottom 0
		right 0
	.btn
		opacity 0
		transition opacity 0.3s
		font-size size-font-preview
		top 0
		left 0
	.btn-clone
		left size-btn-preview
	.btn-hidden
		left size-btn-preview * 2
	&:hover
		.btn
			opacity 1
	&.active
		outline 2px yellow solid
